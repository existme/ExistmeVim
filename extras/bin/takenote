#!/bin/zsh

set -e

ARG=$@
ARG=${ARG// /-}
NOTESDIR=~/notes
[ ! -z $ARG ] && NOTE="$ARG.md"

[ ! -d "$NOTESDIR" ] && mkdir $NOTESDIR
cd $NOTESDIR
if [[ -f $NOTE ]]; then
   vim -c 'set statusline="hello dear"' $NOTE +4 
   exit
fi
touch $NOTE
DATE=$(date '+%Y-%m-%d %H:%M:%S')
cat << EOD >> $NOTE
Note $@
The date is: $DATE)
-----------------------------------------

-----------------------------------------
EOD

vim $NOTE +4

echo "note saved in $NOTESDIR/$NOTE"

exit 0
