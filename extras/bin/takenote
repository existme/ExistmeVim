#!/bin/bash

set -e

ARG=$@
ARG=${ARG// /-}
NOTESDIR=~/notes
[ ! -z $ARG ] && NOTE=$ARG

[ ! -d "$NOTESDIR" ] && mkdir $NOTESDIR
cd $NOTESDIR
touch $NOTE
DATE=$(date '+%Y-%m-%d %H:%M:%S')
cat << EOD >> $NOTE
Note $@
The date is: $DATE)
-----------------------------------------

-----------------------------------------
EOD

vim $NOTE +4

echo "note saved in $NOTESDIR/$NOTE"

exit 0
