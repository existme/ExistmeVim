#!/bin/bash

start="8:00 AM"
end="4:00 PM"
while [ 1 ]
do
   echo "${bW}╔══════════════════════════════════════════════════════════╗"
   echo "║"
   read -e -i "$start" -p "${bW}║ ${bY}>$cZ Start ${bY}:$bC   $bG" start
   read -e -i "$end"   -p "${bW}║ ${bY}>$cZ End   ${bY}:$bB   $bG" end
   echo "${bW}║"
   td "$start" "$end" "${bW}║ ${cZ}"
   echo "${bW}║"
   echo "${bW}╚══════════════════════════════════════════════════════════╝"
   echo
done
