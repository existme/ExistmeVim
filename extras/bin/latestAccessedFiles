#!/bin/sh
last=4
if [[ $1 -neq "-m" && $1 -neq "-a" ]]; then
   echo "Usage: latestAccessFiles$bR -[m|a]$bW [n]$cZ # -m lists modified and -a lists accessed files\n n specifies the minutes" 
   exit
fi
[[ -z $2 ]] || last=$1
echo Finding files accessed within last $1 minutes
sudo find ~/ -amin -$last -type f -printf "%A@ ${bY}%AH:%AM:%.2AS${cW} %AY/%Am/%Ad$cR %p$cZ\n"|egrep -v ".cache|google-chrome|firefox|GLCache|.thunderbird|Mattermost|Slack|.pulse|.jar|Dropbox|.zip"|cut -d' ' -f2-
