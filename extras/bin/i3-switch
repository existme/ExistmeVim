#!/bin/bash

function gen_workspaces()
{
    i3-msg -t get_workspaces | tr ',' '\n' | grep "name" | sed 's/"name":"\(.*\)"/\1/g' | sort -n
}

WORKSPACE=$( (echo empty; gen_workspaces) | rofi -dmenu -p "Select workspace:" )

echo $WORKSPACE
if [ x"empty" = x"${WORKSPACE}" ]
then
    ~/bin/i3-empty-ws
elif [ -n "${WORKSPACE}" ]
then
    i3-msg workspace "${WORKSPACE}"
fi
